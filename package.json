{
  "name": "bug-buddy",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "type": "module",
  "engines": {
    "node": ">=24.12.0 <25.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "pnpm db:generate && pnpm db:migrate:deploy && next build",
    "start": "next start",
    "lint": "eslint",
    "email:dev": "email dev",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:restart": "docker compose restart",
    "docker:logs": "docker compose logs -f",
    "db:generate": "prisma generate --schema=src/server/prisma/schema.prisma --config=src/server/prisma/prisma.config.ts",
    "db:push": "prisma db push --schema=src/server/prisma/schema.prisma --config=src/server/prisma/prisma.config.ts",
    "db:migrate": "prisma migrate dev --schema=src/server/prisma/schema.prisma --config=src/server/prisma/prisma.config.ts",
    "db:migrate:deploy": "prisma migrate deploy --schema=src/server/prisma/schema.prisma --config=src/server/prisma/prisma.config.ts",
    "db:migrate:reset": "prisma migrate reset --schema=src/server/prisma/schema.prisma --config=src/server/prisma/prisma.config.ts",
    "db:studio": "prisma studio --config=src/server/prisma/prisma.config.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@octokit/rest": "^21.0.2",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-email/components": "1.0.2",
    "@t3-oss/env-core": "^0.13.10",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@tanstack/react-table": "^8.21.3",
    "@vercel/blob": "^0.26.0",
    "better-auth": "^1.4.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "fabric": "^5.5.2",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "posthog-js": "^1.150.0",
    "posthog-node": "^4.0.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.54.2",
    "recharts": "^2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "ua-parser-js": "^1.0.37",
    "zod": "^4"
  },
  "devDependencies": {
    "@react-email/preview-server": "5.1.0",
    "@tailwindcss/postcss": "^4",
    "@types/fabric": "^5.3.10",
    "@types/node": "^20.19.27",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ua-parser-js": "^0.7.39",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prisma": "^7.2.0",
    "react-email": "5.1.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
